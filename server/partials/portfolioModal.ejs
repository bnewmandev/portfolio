<div
        class="modal text-center"
        role="dialog"
        tabindex="-1"
        id="<%= item.id %>"
>
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"
                ></button>
            </div>
            <div class="modal-body">
                <div class="container text-center">
                    <div class="row">
                        <div class="col-lg-8 mx-auto">
                            <h2 class="text-uppercase text-secondary mb-0">
                                <%= item.title %>
                            </h2>
                            <hr class="star-dark mb-5"/>
                            <img
                                    class="img-fluid mb-5"
                                    src="<%= item.img %>"
                            />
                            <p class="mb-5">
                                <%= item.text %>
                            </p>
                            <a
                                    class="btn btn-secondary rounded-pill btn-lg mx-auto"
                                    href="<%= item.link %>"
                            >View Project on Github</a
                            >
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer pb-5">
                <a
                        class="btn btn-primary btn-lg mx-auto rounded-pill portfolio-modal-dismiss"
                        role="button"
                        data-bs-dismiss="modal"
                ><i class="fa fa-close pe-none"></i>&nbsp;Close Project</a
                >
            </div>
        </div>
    </div>
</div>
