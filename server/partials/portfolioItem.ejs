<div class="col-md-6 col-lg-4 cover">
    <a
            class="d-block mx-auto portfolio-item cover"
            href="#<%= item.id %>"
            data-bs-toggle="modal"
    >
        <div
                class="d-flex portfolio-item-caption position-absolute h-100 w-100"
        >
            <div
                    class="text-center text-white my-auto portfolio-item-caption-content w-100"
            >
                <i class="fa fa-search-plus fa-3x"></i>
            </div>
        </div>
        <img
                class="img-fluid"
                src="<%= item.img %>"
                style="
									display: block;
									max-height: 200px;
									margin-left: auto;
									margin-right: auto;
								"
        />
    </a>
    <h1
            style="text-align: center; margin-bottom: 50px; font-size: 24.4px"
    >
        <%= item.title %>
    </h1>
</div>